@page
@model Gatekeeper.Web.Pages.PersonsPageModel
@{
    ViewData["Title"] = "Seznam osob";
}

<h1>Přehled osob</h1>

@if(Model.Persons?.Count > 0)
{
    <br />
    <h2>Seznam osob</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jméno</th>
                <th>Příjmení</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model.Persons)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
