<Window x:Class="Gatekeeper.Desktop.Windows.DialogWithFrameAndButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gatekeeper.Desktop.Windows"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" FontSize="16" WindowStartupLocation="CenterOwner"
        Title="DialogWithFrameAndButton">
    <Grid Margin="5">
        <StackPanel Orientation="Vertical">
            <Frame x:Name="mainFrame">

            </Frame>
            <Button x:Name="confirmButton" Width="80" HorizontalAlignment="Right" Click="confirmButton_Click">Ok</Button>
        </StackPanel>
    </Grid>
</Window>
